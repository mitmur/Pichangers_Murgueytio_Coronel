<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iviBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ball"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iviAdd"
        android:contentDescription="@string/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/plus"

        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tviName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iviAdd"
        android:layout_toEndOf="@id/iviBall"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="@string/grid_placeholder" />

    <TextView
        android:id="@+id/tviCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iviAdd"
        android:layout_toEndOf="@id/iviBall"
        android:layout_below="@id/tviName"
        android:text="@string/grid_placeholder" />

</RelativeLayout>